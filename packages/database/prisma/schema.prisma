generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Uwaga: Supabase używa własnej tabeli auth.users dla autentykacji
// Ta tabela User jest tylko dla dodatkowych danych profilu
model User {
  id            String    @id // To będzie Supabase user.id (UUID)
  email         String    @unique
  name          String?
  language      String?   @default("en") // Language preference: "en", "pl", etc.
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  products      Product[]
  categories    Category[]
  notifications Notification[]
  
  @@map("users")
}

model Category {
  id              String    @id @default(cuid())
  name            String
  color           String?   // Opcjonalny kolor dla kategorii (hex)
  icon            String?   // Opcjonalna ikona dla kategorii
  
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  products        Product[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([userId, name]) // Użytkownik nie może mieć dwóch kategorii o tej samej nazwie
  @@index([userId])
  @@map("categories")
}

model Product {
  id              String    @id @default(cuid())
  name            String
  barcode         String?   // Kod kreskowy produktu (EAN/UPC) - dla szybkiego wyszukiwania
  brand           String?   // Marka produktu
  manufacturer    String?   // Nazwa firmy/producenta (z OpenFoodFacts)
  expiryDate      DateTime
  quantity        Float     @default(1) // Ilość produktu (może być ułamkowa, np. 0.5 kg, 250 ml)
  quantityUnit    String?   @default("szt") // Jednostka miary: "szt", "g", "kg", "ml", "l", "opak", itp.
  categoryId      String?   // Relacja do Category zamiast String
  category        Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  location        String?   // "fridge", "freezer", "pantry"
  imageUrl        String?
  notes           String?
  
  // Składniki i alergeny z OpenFoodFacts
  ingredients     String?   // Lista składników (tekst)
  allergens       String?   // Informacje o alergenach
  
  // Wartości odżywcze z OpenFoodFacts (jako JSON)
  nutritionData   Json?     // { calories, protein, carbs, fat, fiber, sugars, salt }
  
  // Etykiety z OpenFoodFacts (np. "Bio", "Vegan", "Fair Trade")
  labels          String[]  @default([])
  
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@index([userId])
  @@index([barcode]) // Indeks dla szybkiego wyszukiwania po kodzie kreskowym
  @@index([expiryDate])
  @@index([categoryId])
  @@unique([userId, barcode]) // Użytkownik nie może mieć dwóch produktów z tym samym kodem kreskowym
  @@map("products")
}

model Notification {
  id              String    @id @default(cuid())
  type            String    // "email", "telegram", "discord", "push"
  message         String
  sent            Boolean   @default(false)
  scheduledFor    DateTime
  sentAt          DateTime?
  
  userId          String
  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime  @default(now())
  
  @@index([userId])
  @@index([scheduledFor])
  @@map("notifications")
}

